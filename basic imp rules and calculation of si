#include <stdio.h>
//calculation of simple interest
int main() {
    int p,n;
    float r,si;
    printf("enter the values of p,n,r");
    scanf("%d%d%f",&p,&n,&r);
    
    si=p*n*r/100;
    printf("%f",si);
    return 0;
     /*%f for printing real values
       %d for printing integer values
       %c for printing character values
       the ampersand(&) before the varibles in the scanf statements is a must.
       printf("<format sting>",<list of variables>)
       scanf also same as above*/
}
